@model IEnumerable<WebBlogs.Models.Role>

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">QUẢN LÍ QUYỀN TRUY CẬP</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <a asp-area="Admin" asp-controller="Roles" asp-action="Create" class="btn btn-outline-secondary">Create</a>
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>RolesID</th>
                                <th>RolesName</th>
                                <th>RolesDescription</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(Model != null && Model.Count() > 0)
                            {
                                foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@item.RoleId</td>
                                        <td>@item.RoleName</td>
                                        <td>@item.RoleDescription</td>
                                        <td>
                                            
                                            <a asp-area="Admin" asp-controller="Roles" asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-outline-success">Details</a>
                                            <a asp-area="Admin" asp-controller="Roles" asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-outline-info">Edit</a>
                                            <a asp-area="Admin" asp-controller="Roles" asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-outline-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>    
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>